<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="40dp">

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/custom_design"
        android:drawableStart="@drawable/ic_user_design"
        android:drawablePadding="10dp"
        android:layout_marginTop="7.5dp"
        android:layout_marginBottom="7.5dp"
        android:textCursorDrawable="@null"
        android:padding="10dp"
        android:hint="Name"
        android:textAlignment="viewStart"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/custom_design"
        android:drawableStart="@drawable/ic_email_design"
        android:drawablePadding="10dp"
        android:layout_marginTop="7.5dp"
        android:layout_marginBottom="7.5dp"
        android:padding="10dp"
        android:textCursorDrawable="@null"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:background="@drawable/custom_design"
        android:drawableStart="@drawable/ic_padlock_design"
        android:drawablePadding="10dp"
        android:layout_marginTop="7.5dp"
        android:layout_marginBottom="7.5dp"
        android:textCursorDrawable="@null"
        android:padding="10dp"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/etReenterPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/custom_design"
        android:drawableStart="@drawable/ic_padlock_design"
        android:drawablePadding="10dp"
        android:layout_marginTop="7.5dp"
        android:layout_marginBottom="7.5dp"
        android:textCursorDrawable="@null"
        android:padding="10dp"
        android:hint="Re-enter Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_design"
        android:layout_marginTop="7.5dp"
        android:layout_marginBottom="7.5dp"
        android:onClick="save"
        android:text="Register"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Already Registered?\nLogin here."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:onClick="login"/>
</LinearLayout>